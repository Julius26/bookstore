<div class="centered col-sm-6">
  <h2><%= @book.title %></h2>
  <hr>
  <p>
    <%= @book.description %>
    <br>
    <br>
    <small>Author | <%= @book.author %></small>
  </p>

  <hr>

  <%= link_to 'Edit', edit_book_path(@book) %> |
  <%= link_to 'Delete', book_path(@book), method: :delete, class: 'text-danger',
    data: { confirm: "Are you sure you want to delete '#{@book.title}'?" }
  %> |
  <%= link_to 'All books', books_path %> |
  <%= link_to 'Create another', new_book_path %>
</div>
