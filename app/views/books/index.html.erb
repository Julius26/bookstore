<div class="row">
  <div class="col-sm-12">
      <h3>All books</h3>
      <hr>
      <div class="col-sm-6">

        <% @books.each do |b| %>
          <%= link_to b.title, book_path(b) %>
          <p><%= truncate_html(b.description, length: 200 ) %></p>
        <% end %>
      </div>
      <div class="col-sm-3"></div>
      <div class="col-sm-2">
        <%=link_to 'New Book', new_book_path, class: 'btn btn-success' %>
      </div>
  </div>
</div>

<%= will_paginate @books %>
